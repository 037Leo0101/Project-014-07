<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trips</title>

    <link rel="stylesheet" type="text/css" href="/style.css">
    <link rel="stylesheet" type="text/css" href="/weather.css">
    <link rel="stylesheet" type="text/css" href="/home.css">
    <script src="/main.js"></script>

</head>

<body onLoad="loadTrips()">
    <%- include ('../partials/header') %>
        <%- include ('../partials/menu') %>
            <main>
                <div class="container">
                    <div id="cart-container"></div>
                    <div id="cartHotelData">Trips could not load</div>
                    <button id="share-trip-button">Share Trip</button>
                        <button id="instagram-button" style="display:none">Share on Instagram</button>
                        <button id="facebook-button" style="display:none">Share on Facebook</button>
                        <button id="twitter-button" style="display:none">Share on Twitter</button>
                        </div>
                        <script>
                            const shareTripButton = document.getElementById("share-trip-button");
                            const instagramButton = document.getElementById("instagram-button");
                            const facebookButton = document.getElementById("facebook-button");
                            const twitterButton = document.getElementById("twitter-button");
                        
                            let isButtonsVisible = false;  // initially, buttons are not visible
                        
                            shareTripButton.addEventListener("click", () => {
                                if (isButtonsVisible) {  // if buttons are visible, hide them
                                    instagramButton.style.display = "none";
                                    facebookButton.style.display = "none";
                                    twitterButton.style.display = "none";
                                    isButtonsVisible = false;  // update the state
                                } else {  // if buttons are hidden, show them
                                    instagramButton.style.display = "inline-block";
                                    facebookButton.style.display = "inline-block";
                                    twitterButton.style.display = "inline-block";
                                    isButtonsVisible = true;  // update the state
                                }
                            });
                        
                            instagramButton.addEventListener("click", () => {
                                const instagramLink = "https://www.instagram.com/accounts/login/";
                                window.open(instagramLink, "_blank");
                            });
                        
                            facebookButton.addEventListener("click", () => {
                                const facebookLink = "https://www.facebook.com/login.php";
                                window.open(facebookLink, "_blank");
                            });
                        
                            twitterButton.addEventListener("click", () => {
                                const twitterLink = "https://twitter.com/login";
                                window.open(twitterLink, "_blank");
                            });
                        </script>
                        

                </div>
            </main>
            <%- include ('../partials/footer') %>
</body>

</html>